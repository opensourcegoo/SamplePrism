<UserControl x:Class="MaterialDesignButtons.Module.Views.MaterialDesignButtonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:MaterialDesignButtons.Module.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1500" d:DesignWidth="1200" >

    <!--
        小计
        Material Design 里定义了 色阶 (Hue) + 亮度 (Lightness) + 饱和度 (Saturation)
        RaisedButton 的 默认背景色（你说的“中色”）是 PrimaryColor 的 中间亮度版本
        它看起来接近原色，但已经经过微调，“中色 ≈ 原色”只是视觉上接近，但不是真正原色
    -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Material Design Buttons View" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20"/>
        <ScrollViewer Margin="0,68,0,2" Grid.RowSpan="2">
            <ScrollViewer.Resources>
                <system:Double x:Key="iconSize">24</system:Double>
                <system:Double x:Key="ButtonWidth">90</system:Double>
            </ScrollViewer.Resources>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <!--MaterialDesignFloatingActionMiniLightButton一般用于强调次要操作，通常具有较浅的背景色和较低的视觉优先级。-->
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="18,0" />
                        </Style>
                    </StackPanel.Resources>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFloatingActionSecondaryButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0" Tag="FloatingAction">
                    <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFloatingActionButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFloatingActionDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionSecondaryLightButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFloatingActionSecondaryButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>
                </StackPanel>



                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Style="{StaticResource MaterialDesignPaperLightButton}" Margin="10,0" >
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignPaperButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignPaperDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignPaperSecondaryLightButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignPaperSecondaryButton}" Margin="10, 0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <!--MaterialDesignFlatLightButton一般用于强调次要操作，通常具有较浅的背景色和较低的视觉优先级。-->
                    <Button Style="{StaticResource MaterialDesignFlatLightButton}" Margin="10,0" >
                        <!--materialDesign:PackIconKind 使用来支持引用类型使用 例如：{x:Type materialDesign:PackIconKind}-->
                        <materialDesign:PackIcon Width="{StaticResource  iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource  iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatSecondaryLightButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatSecondaryButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatSecondaryDarkButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Style="{StaticResource MaterialDesignOutlinedLightButton}" Margin="10,0" >
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Margin="10,0" >
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedDarkButton}" Margin="10,0" >
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedSecondaryLightButton}" Margin="10,0" >
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedSecondaryButton}" Margin="10,0" >
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}" Margin="10,0" >
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                </StackPanel>

                <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,10,0,0">
                    <!--MaterialDesignFlatLightBgButton 一般用来表示在浅色背景上的按钮，通常具有较浅的背景色以确保在浅色背景上仍然可见。-->
                    <Button Style="{StaticResource  MaterialDesignFlatLightBgButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatMidBgButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatSecondaryLightBgButton}" Margin="10,0">
                        <materialDesign:PackIcon Width="{StaticResource iconSize}" Kind="Alarm" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}" Margin="10,0">
                        <materialDesign:PackIcon  Kind="Alarm" Width="{StaticResource iconSize}" />
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatSecondaryDarkBgButton}" Margin="10,0" >
                        <materialDesign:PackIcon Kind="Alarm"  Width="{StaticResource iconSize}"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="LIGHT" />
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="MID" />
                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="DARK" />
                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="LIGHT" />
                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="MID" />
                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="DARK" />
                </StackPanel>

                <StackPanel Grid.Row="8" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Style="{StaticResource MaterialDesignPaperLightButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="LIGHT" />
                    <Button Style="{StaticResource MaterialDesignPaperButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="MID" />
                    <Button Style="{StaticResource MaterialDesignPaperDarkButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="DARK" />
                    <Button Style="{StaticResource MaterialDesignPaperSecondaryLightButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="LIGHT" />
                    <Button Style="{StaticResource MaterialDesignPaperSecondaryButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="MID" />
                    <Button Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="DARK" />
                </StackPanel>

                <StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Style="{StaticResource MaterialDesignFlatLightButton}" Margin="10,0" Width="{StaticResource ButtonWidth}" Content="LIGHT" />
                    <Button Style="{StaticResource MaterialDesignFlatButton}" Margin="10,0" Width="{StaticResource ButtonWidth}" Content="MID" />
                    <Button Style="{StaticResource MaterialDesignFlatDarkButton}" Margin="10,0" Width="{StaticResource ButtonWidth}" Content="DARK" />
                    <Button Style="{StaticResource MaterialDesignFlatSecondaryLightButton}" Margin="10,0" Width="{StaticResource ButtonWidth}" Content="LIGHT" />
                    <Button Style="{StaticResource MaterialDesignFlatSecondaryButton}" Margin="10,0" Width="{StaticResource ButtonWidth}" Content="MID" />
                    <Button Style="{StaticResource MaterialDesignFlatSecondaryDarkButton}" Margin="10,0" Width="{StaticResource ButtonWidth}" Content="DARK" />
                </StackPanel>

                <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,10,0,0" Tag="outline">
                    <Button Style="{StaticResource MaterialDesignOutlinedLightButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="LIGHT" />
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="MID" />
                    <Button Style="{StaticResource MaterialDesignOutlinedDarkButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="DARK" />
                    <Button Style="{StaticResource MaterialDesignOutlinedSecondaryLightButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="LIGHT" />
                    <Button Style="{StaticResource MaterialDesignOutlinedSecondaryButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="MID" />
                    <Button Style="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="DARK" />
                </StackPanel>


                <StackPanel Grid.Row="11" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Style="{StaticResource MaterialDesignFlatLightBgButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="LIGHTBG" />
                    <Button Style="{StaticResource MaterialDesignFlatMidBgButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="MIDBG" />
                    <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="DarkBg" />
                    <Button Style="{StaticResource MaterialDesignFlatSecondaryLightBgButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="LIGHTBG" />
                    <Button Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="MIDBG" />
                    <Button Style="{StaticResource MaterialDesignFlatSecondaryDarkBgButton}" Width="{StaticResource ButtonWidth}" Margin="10,0" Content="DarkBg" />
                </StackPanel>

                <!--Badged是一个object?类型 可以是文字也可以是图标或者其他类型-->
                <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,10,0,0" Tag="带有提示图标 badged">
                    <materialDesign:Badged Badge="3" x:Name="badge" Margin="10">
                        <Button Content="mail"/>
                    </materialDesign:Badged>
                    <materialDesign:Badged Badge="!" BadgeBackground="Red" Margin="0,10,10,0" >
                        <Button Content="alert"/>
                    </materialDesign:Badged>
                    <materialDesign:Badged Badge="{materialDesign:PackIcon Kind=Heart}" Margin="0,10,10,0" >
                        <Button Content="LOVE"/>
                    </materialDesign:Badged>
                    <materialDesign:Badged Badge="99+" BadgeBackground="Green" Margin="0,10,10,0" >
                        <Button Content="messages"/>
                    </materialDesign:Badged>
                    <materialDesign:Badged Badge="{materialDesign:PackIcon Kind=BellOutline}" BadgeBackground="Orange" Margin="0,10,10,0" >
                        <Button Content="notifications"/>
                    </materialDesign:Badged>
                    <materialDesign:Badged Badge="New" BadgeBackground="Blue" Margin="0,10,10,0" >
                        <Button Content="updates"/>
                    </materialDesign:Badged>

                    <materialDesign:Badged Badge="Dangerous" BadgeChangedStoryboard="{StaticResource BadgeChangedStoryboard}" BadgeColorZoneMode="SecondaryMid" Margin="0,10,10,0">
                        <Button Content="warning"/>
                    </materialDesign:Badged>

                    <materialDesign:Badged Badge="{materialDesign:PackIcon Kind=Star}" BadgeBackground="Purple" Margin="0,10,10,0" >
                        <Button Content="favorites"/>
                    </materialDesign:Badged>


                </StackPanel>

                <StackPanel Grid.Row="13" Orientation="Horizontal" Margin="10,0,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type materialDesign:Badged}">
                            <Setter Property="Margin" Value="0,10,10,0" />
                        </Style>
                    </StackPanel.Resources>
                    <materialDesign:Badged x:Name="CountingBadge" Badge="{Binding BadgeClickMeCount}" BadgeBackground="GreenYellow"  >
                        <Button Content="CLICK ME" Command="{Binding ClickMeCommand}" ToolTip="Click me count"/>
                    </materialDesign:Badged>

                    <!--使用ContentStringFormat-->
                    <Button Content="{Binding IncrementOrClickMeCount}" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Command="{Binding IncrementOrClickMeCommand}" ContentStringFormat="Increment Or Click Me {0}" ToolTip="Increment Or Click me count" Margin="0,10,0,0"/>

                    <!--内容是图标的按钮-->
                    <Button Content="{materialDesign:PackIcon Kind=AirplaneTakeoff}" Margin="10,10,10,0" ToolTip="icon" />

                    <!--自定义涟漪颜色的按钮 customer ripple-->
                    <Button Content="Csutomer Ripple" Margin="10,10,10,0" Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" ToolTip="Csutomer Ripple">
                        <materialDesign:RippleAssist.Feedback>
                            <SolidColorBrush Color="Red" Opacity="1"/>
                        </materialDesign:RippleAssist.Feedback>
                    </Button>

                    <!--没有涟漪效果的按钮 NO ripple-->
                    <Button Content="NO Ripple" Margin="10,10,10,0"  Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" ToolTip="NO Ripple">
                        <materialDesign:RippleAssist.IsDisabled>true</materialDesign:RippleAssist.IsDisabled>
                    </Button>



                </StackPanel>
                <StackPanel Grid.Row="14" Orientation="Horizontal" Margin="10,10,0,0">
                    <RepeatButton Background="{DynamicResource MaterialDesign.Brush.Primary.Light}" Content="Repeat-Primary-Light" Margin="0,10,0,10"/>
                    <RepeatButton Background="{DynamicResource MaterialDesign.Brush.Primary}" Content="Repeat-Primary-Light" Margin="10,10,0,10"/>
                    <RepeatButton Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}" Content="Repaat-Primary-Dark" Margin="10,10,0,10"/>
                    <RepeatButton Background="{DynamicResource MaterialDesign.Brush.Secondary.Light}" Content="Repeat-Secondary-Light" Margin="10,10,0,10"/>
                    <RepeatButton Background="{DynamicResource MaterialDesign.Brush.Secondary}" Content="Repeat-Secondary-Light" Margin="10,10,0,10"/>
                    <RepeatButton Background="{DynamicResource MaterialDesign.Brush.Secondary.Dark}" Content="Repaat-Secondary-Dark" Margin="10,10,0,10"/>
                </StackPanel>

                <StackPanel Grid.Row="15" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button Margin="10,10,0,0" Style="{StaticResource MaterialDesignIconButton}" ToolTip="MaterialDesignIconButton">
                        <materialDesign:PackIcon Kind="Play" />
                    </Button>

                    <Button Margin="10,10,0,0" Style="{StaticResource MaterialDesignIconForegroundButton}" ToolTip="MaterialDesignIconForegroundButton">
                        <materialDesign:PackIcon Kind="Play" />
                    </Button>

                    <Button Margin="10,10,0,0" Background="{DynamicResource MaterialDesign.Brush.TextBox.FilledBackground}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="MaterialDesign.Brush.TextBox.FilledBackground">
                        <materialDesign:PackIcon Kind="Play" />
                    </Button>
                </StackPanel>

                <!--分割线-->
                <Border Grid.Row="16" Height="1" BorderThickness="1" Margin="10,25,0,10" BorderBrush="{DynamicResource MaterialDesign.Brush.TextBox.HoverBackground}" />
                <!--<Rectangle Grid.Row="17" Height="1" Margin="10,25,0,10" Fill="{DynamicResource MaterialDesign.Brush.TextBox.HoverBackground}" />-->

                <Grid Grid.Row="18"  Margin="10,0,0,0">
                    <Grid.Resources>
                        <system:Double x:Key="ButtonHeight">50</system:Double>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Buttons With Customer Corner Radius" Margin="0,20" Style="{StaticResource MaterialDesignHeadline5TextBlock}" />
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button Style="{DynamicResource MaterialDesignRaisedLightButton}" Margin="10,10,0,10" materialDesign:ButtonAssist.CornerRadius="5" Content="5/50 Radius" />
                        <Button Style="{DynamicResource MaterialDesignRaisedButton}" Margin="10,10,0,10" materialDesign:ButtonAssist.CornerRadius="10" Content="10/50 Radius" />
                        <Button Style="{DynamicResource MaterialDesignRaisedDarkButton}" Margin="10,10,0,10" materialDesign:ButtonAssist.CornerRadius="25" Content="25/50 Radius" />
                        <Button Style="{DynamicResource MaterialDesignRaisedSecondaryButton}" Margin="10,10,0,10" materialDesign:ButtonAssist.CornerRadius="25,25,0,0" Content="25/50 Radius" />
                    </StackPanel>

                    <TextBlock Grid.Row="2" Text="Buttons With Progress" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0,20"/>
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <Grid>
                            <!--带有进度指示器的按钮-->
                            <Button Command="{Binding DismissCommand}" Margin="2,0" Width="100" 
                                    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" 
                                    materialDesign:ButtonProgressAssist.Value="{Binding DismissProgress}"
                                    materialDesign:ButtonProgressAssist.IsIndeterminate="False" Visibility="{Binding IsShowDismissButton,Converter={x:Static materialDesign:BooleanToVisibilityConverter.CollapsedInstance}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Dismiss" />
                                    <materialDesign:PackIcon Kind="Close" Margin="2" />
                                </StackPanel>
                            </Button>
                            <TextBlock Text="{Binding RestartCountDownText}" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsShowDismissButton,Converter={x:Static materialDesign:BooleanToVisibilityConverter.NotCollapsedInstance}}" />
                        </Grid>

                        <Button Margin="10,10,0,10" materialDesign:ButtonProgressAssist.IsIndeterminate="True" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" 
                                materialDesign:ButtonProgressAssist.Value="80" Content="Indeterminate" IsEnabled="True" />

                        <Button Margin="10,10,0,10" materialDesign:ButtonProgressAssist.IsIndeterminate="False" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" 
                                materialDesign:ButtonProgressAssist.Value="60" Content="Indeterminate" IsEnabled="True" />

                        <Button Margin="10,10,0,10" Style="{StaticResource MaterialDesignFlatButton}" Content="DesignFlatButton" 
                                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" materialDesign:ButtonProgressAssist.IsIndeterminate="True" />

                        <Button Margin="10,10,0,10" Style="{StaticResource MaterialDesignFlatMidBgButton}" Content="DesignFlatMidBgButton"  
                                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"   materialDesign:ButtonProgressAssist.IsIndeterminate="True"/>
                                               
                    </StackPanel>
                    <!--TargetType="materialDesign:PackIcon"
        BasedOn="{StaticResource {x:Type materialDesign:PackIcon}}">-->
                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <Button Margin="10,10,0,10" Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <materialDesign:PackIcon>
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="{x:Type materialDesign:PackIcon}" BasedOn="{StaticResource {x:Type materialDesign:PackIcon} }">
                                        <!--<Setter Property="Kind" Value="Abc" />-->
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </Button>
                    </StackPanel>
                    
                    




                    <!--<Button Margin="10,10,0,0" Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="Play" />
                    </Button>

                    <Button Margin="10,10,0,0" Style="{StaticResource MaterialDesignIconForegroundButton}" ToolTip="MaterialDesignIconForegroundButton">
                        <materialDesign:PackIcon Kind="Play" />
                    </Button>

                    <Button Margin="10,10,0,0" Background="{DynamicResource MaterialDesign.Brush.TextBox.FilledBackground}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="MaterialDesign.Brush.TextBox.FilledBackground">
                        <materialDesign:PackIcon Kind="Play" />
                    </Button>-->
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

    