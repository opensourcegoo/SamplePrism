<Window x:Class="SamplePrism.Views.TestLoginWindow02"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamplePrism.Views"
        mc:Ignorable="d"
        Title="TestLoginWindow02" Height="450" Width="800" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel with Image and Text -->
        <Border Grid.Column="0" Background="#3F3F5E">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="AMU" FontSize="48" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="Capturing Moments, Creating Memories" FontSize="18" Foreground="White" Margin="0,20,0,0" TextAlignment="Center"/>
                <Button Content="Back to website &gt;" Click="BackToWebsite_Click" Padding="10,5" Background="#4A4A6E" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Right Panel with Form -->
        <Border Grid.Column="1" Background="#1F1F2E">
            <StackPanel Margin="50" VerticalAlignment="Center">
                <TextBlock Text="Welcome" FontSize="32" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="Already have an account? Log in" FontSize="14" Foreground="#D3D3D3" Margin="0,10,0,20"/>
                <TextBox Text="Fletcher" FontSize="14" Height="30" Background="#4A4A6E" Foreground="White" Margin="0,0,0,10"/>
                <TextBox Text="Last name" FontSize="14" Height="30" Background="#4A4A6E" Foreground="White" Margin="0,0,0,10"/>
                <TextBox Text="Email" FontSize="14" Height="30" Background="#4A4A6E" Foreground="White" Margin="0,0,0,10"/>
                <PasswordBox Password="Enter your password" FontSize="14" Height="30" Background="#4A4A6E" Foreground="White" Margin="0,0,0,10"/>
                <CheckBox Content="I agree to the Terms &amp; Conditions" Foreground="#D3D3D3" Margin="0,0,0,10"/>
                <Button Content="Login" Height="40" Background="#6A5ACD" Foreground="White" Click="CreateAccount_Click"/>
                <TextBlock Text="Or register with" FontSize="14" Foreground="#D3D3D3" HorizontalAlignment="Center" Margin="0,20,0,10"/>
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Google" Height="40" Width="100" Background="#4A4A6E" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="Apple" Height="40" Width="100" Background="#4A4A6E" Foreground="White"/>
                </StackPanel>-->
            </StackPanel>
        </Border>
    </Grid>
</Window>
