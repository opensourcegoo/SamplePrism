<Window x:Class="SamplePrism.Views.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamplePrism.Views"
        mc:Ignorable="d"
        Title="HomeView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="20">
            <Label Content="UL Mode:"/>
            <ComboBox x:Name="ULComboBox" 
                  ItemsSource="{Binding UlModeList}" 
                  SelectedItem="{Binding SelectedULMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Margin="0,5,0,15"/>

            <Label Content="DL Mode:"/>
            <ComboBox x:Name="DLComboBox" 
                  ItemsSource="{Binding DlModeList}" 
                  SelectedItem="{Binding SelectedDLMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Margin="0,5,0,15"/>

            <TextBlock>
            <Run Text="当前总和: "/>
            <Run Text="{Binding Sum}"/>
            <Run Text=" (最大值: 13)"/>
            </TextBlock>
        </StackPanel>
        <Grid HorizontalAlignment="Right" Margin="0,217,0,0" Grid.RowSpan="2" Width="800">
            <ComboBox Width="100" Height="30" ItemsSource="{Binding AvaiableA1Lsit}" SelectedValue="{Binding SelectedEA1}"  HorizontalAlignment="Left"/>
            <ComboBox Width="100" Height="30" ItemsSource="{Binding AvaiableA2Lsit}" SelectedValue="{Binding SelectedEA2}"  HorizontalAlignment="Center"/>
            <ComboBox Width="100" Height="30" ItemsSource="{Binding AvaiableA3Lsit}" SelectedValue="{Binding SelectedEA3}"  HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
