<Window x:Class="SamplePrism.Views.TestLoginWindow03"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AML Login" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- 主要渐变背景 -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2D1B69" Offset="0"/>
            <GradientStop Color="#5B42A8" Offset="0.5"/>
            <GradientStop Color="#8B73D4" Offset="1"/>
        </LinearGradientBrush>

        <!-- 左侧图片区域渐变 -->
        <LinearGradientBrush x:Key="ImageAreaBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A3584" Offset="0"/>
            <GradientStop Color="#6B4FB5" Offset="0.5"/>
            <GradientStop Color="#8B73D4" Offset="1"/>
        </LinearGradientBrush>

        <!-- 右侧深色区域 -->
        <SolidColorBrush x:Key="RightPanelBrush" Color="#3D3D5C"/>

        <!-- 输入框样式 -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#4A4A6A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderThickness="0">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 密码框样式 -->
        <Style x:Key="InputPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#4A4A6A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderThickness="0">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"/>
                                <Button x:Name="ShowPasswordButton"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       Foreground="#999">
                                    <Path Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                          Width="20" Height="20"/>
                                </Button>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 主要按钮样式 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#7C3AED" Offset="0"/>
                        <GradientStop Color="#A855F7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                <GradientStop Color="#C084FC" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 社交登录按钮样式 -->
        <Style x:Key="SocialButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A4A6A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A5A7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 复选框样式 -->
        <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBoxBorder"
                                    Width="18" Height="18"
                                    Background="#4A4A6A"
                                    BorderBrush="#7C3AED"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    VerticalAlignment="Center">
                                <Path x:Name="CheckMark"
                                      Data="M0,4 L3,7 L8,1"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Margin="8,0,0,0"
                                            VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#7C3AED"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource MainBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧图片区域 -->
        <Border Grid.Column="0" 
                Background="{StaticResource ImageAreaBrush}"
                CornerRadius="0,20,20,0"
                Margin="20,20,0,20">
            <Grid>
                <!-- 背景图片效果 -->
                <Ellipse Width="400" Height="200" 
                         Fill="#60000000"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,50,0,0"/>

                <!-- 返回网站按钮 -->
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="30,30,0,0"
                        Background="#60FFFFFF"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontSize="14">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                <StackPanel Orientation="Horizontal" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                    <TextBlock Text="Back to website" 
                                             Margin="0,0,5,0"/>
                                    <Path Data="M8 4 L12 8 L8 12" 
                                          Stroke="White" 
                                          StrokeThickness="2"
                                          Width="8" Height="8"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Logo -->
                <TextBlock Text="AML"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="30,90,0,0"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"/>

                <!-- 底部文字 -->
                <StackPanel VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Margin="30,0,0,50">
                    <TextBlock Text="Capturing Moments,"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="White"
                               LineHeight="45"/>
                    <TextBlock Text="Creating Memories"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="White"
                               LineHeight="45"/>

                    <!-- 页面指示器 -->
                    <StackPanel Orientation="Horizontal" 
                               Margin="0,20,0,0">
                        <Ellipse Width="8" Height="8" Fill="#60FFFFFF" Margin="0,0,8,0"/>
                        <Ellipse Width="8" Height="8" Fill="#60FFFFFF" Margin="0,0,8,0"/>
                        <Ellipse Width="8" Height="8" Fill="White"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 右侧表单区域 -->
        <Border Grid.Column="1"
                Background="{StaticResource RightPanelBrush}"
                CornerRadius="20,0,0,20"
                Margin="0,20,20,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="60,80,60,60">
                    <!-- 标题 -->
                    <TextBlock Text="Create an account"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,20"/>

                    <!-- 登录链接 -->
                    <StackPanel Orientation="Horizontal" 
                               Margin="0,0,0,40">
                        <TextBlock Text="Already have an account? "
                                   Foreground="#999"
                                   FontSize="14"/>
                        <TextBlock Text="Log in"
                                   Foreground="White"
                                   FontSize="14"
                                   TextDecorations="Underline"
                                   Cursor="Hand"/>
                    </StackPanel>

                    <!-- 表单字段 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 名字 -->
                        <TextBox Grid.Column="0"
                                 Text="Fletcher"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,0,0,20"/>

                        <!-- 姓氏 -->
                        <TextBox Grid.Column="2"
                                 Background="#4A4A6A"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Margin="0,0,0,20">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="12"
                                            BorderThickness="0">
                                        <Grid>
                                            <TextBlock Text="Last name"
                                                       Foreground="#999"
                                                       Margin="20,15"
                                                       VerticalAlignment="Center"
                                                       IsHitTestVisible="False"
                                                       Visibility="Visible"/>
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                        Margin="20,15"
                                                        VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </Grid>

                    <!-- 邮箱 -->
                    <TextBox Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,0,0,20">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#4A4A6A"
                                        CornerRadius="12"
                                        BorderThickness="0">
                                    <Grid>
                                        <TextBlock Text="Email"
                                                   Foreground="#999"
                                                   Margin="20,15"
                                                   VerticalAlignment="Center"
                                                   IsHitTestVisible="False"/>
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                    Margin="20,15"
                                                    VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <!-- 密码 -->
                    <PasswordBox Style="{StaticResource InputPasswordBoxStyle}"
                                 Margin="0,0,0,30">
                        <PasswordBox.Template>
                            <ControlTemplate TargetType="PasswordBox">
                                <Border Background="#4A4A6A"
                                        CornerRadius="12"
                                        BorderThickness="0">
                                    <Grid>
                                        <TextBlock Text="Enter your password"
                                                   Foreground="#999"
                                                   Margin="20,15"
                                                   VerticalAlignment="Center"
                                                   IsHitTestVisible="False"/>
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                    Margin="20,15"
                                                    VerticalAlignment="Center"/>
                                        <Button HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Foreground="#999">
                                            <Path Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                  Fill="#999"
                                                  Width="20" Height="20"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </PasswordBox.Template>
                    </PasswordBox>

                    <!-- 同意条款复选框 -->
                    <CheckBox Style="{StaticResource CustomCheckBoxStyle}"
                              IsChecked="True"
                              Margin="0,0,0,30">
                        <TextBlock>
                            <Run Text="I agree to the "/>
                            <Run Text="Terms &amp; Conditions" 
                                 TextDecorations="Underline" 
                                 Cursor="Hand"/>
                        </TextBlock>
                    </CheckBox>

                    <!-- 创建账户按钮 -->
                    <Button Content="登录"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,0,30"/>

                    <!-- 分隔线 -->
                    <TextBlock Text="Or register with"
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               FontSize="14"
                               Margin="0,0,0,20"/>

                    <!-- 社交登录按钮 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Google 登录 -->
                        <Button Grid.Column="0"
                                Style="{StaticResource SocialButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <!-- Google Icon -->
                                <Ellipse Width="20" Height="20" 
                                         Fill="#4285F4" 
                                         Margin="0,0,10,0"/>
                                <TextBlock Text="Google" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Apple 登录 -->
                        <Button Grid.Column="2"
                                Style="{StaticResource SocialButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <!-- Apple Icon -->
                                <Ellipse Width="20" Height="20" 
                                         Fill="White" 
                                         Margin="0,0,10,0"/>
                                <TextBlock Text="Apple" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>