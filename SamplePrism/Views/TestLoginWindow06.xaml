<Window x:Class="SamplePrism.Views.TestLoginWindow06"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        Title="Modern Login" Height="600" Width="800"
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen" prism:ViewModelLocator.AutoWireViewModel="True" >

    <Window.Resources>
        <!-- 样式定义 -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}" 
                               Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#FF6366F1"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border" 
                                                          Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                          To="#FF6366F1" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border" 
                                                          Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                          To="#FF404040" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}" 
                               Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#FF6366F1"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border" 
                                                          Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                          To="#FF6366F1" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border" 
                                                          Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                          To="#FF404040" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                               CornerRadius="5" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Direction="270" Color="#FF6366F1" 
                                                Opacity="0.3" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border" 
                                                          Storyboard.TargetProperty="Background.Color"
                                                          To="#FF7C3AED" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border" 
                                                          Storyboard.TargetProperty="Background.Color"
                                                          To="#FF6366F1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>

        <!-- 动画故事板 -->
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LoadingEllipse1" 
                                         Storyboard.TargetProperty="Opacity"
                                         BeginTime="0:0:0">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0.2"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.75" Value="1"/>
                <LinearDoubleKeyFrame KeyTime="0:0:1.5" Value="0.2"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LoadingEllipse2" 
                                         Storyboard.TargetProperty="Opacity"
                                         BeginTime="0:0:0.3">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0.2"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.75" Value="1"/>
                <LinearDoubleKeyFrame KeyTime="0:0:1.5" Value="0.2"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LoadingEllipse3" 
                                         Storyboard.TargetProperty="Opacity"
                                         BeginTime="0:0:0.6">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0.2"/>
                <LinearDoubleKeyFrame KeyTime="0:0:0.75" Value="1"/>
                <LinearDoubleKeyFrame KeyTime="0:0:1.5" Value="0.2"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetName="LoginPanel" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="-300" To="0" Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LoginPanel" 
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"/>
        </Storyboard>

        <Storyboard x:Key="BackgroundAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GeometricShape1" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:20"/>
            <DoubleAnimation Storyboard.TargetName="GeometricShape2" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:25"/>
        </Storyboard>

        <!-- 成功后的动画 -->
        <Storyboard x:Key="LoginSuccessAnimation">
            <!-- 左侧表单折叠动画 -->
            <DoubleAnimation Storyboard.TargetName="LoginFormContainer" 
                           Storyboard.TargetProperty="Height"
                           To="0" Duration="0:0:0.8"
                           BeginTime="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LoginFormContainer" 
                           Storyboard.TargetProperty="Opacity"
                           To="0" Duration="0:0:0.6"
                           BeginTime="0:0:0.5"/>

            <!-- 右侧面板向右滑出动画 -->
            <DoubleAnimation Storyboard.TargetName="RightPanel" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           To="400" Duration="0:0:1.0"
                           BeginTime="0:0:1.0">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RightPanel" 
                           Storyboard.TargetProperty="Opacity"
                           To="0" Duration="0:0:0.8"
                           BeginTime="0:0:1.2"/>

            <!-- 成功消息淡入 -->
            <!--<DoubleAnimation Storyboard.TargetName="SuccessMessage" 
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"
                           BeginTime="0:0:1.5"/>
            <DoubleAnimation Storyboard.TargetName="SuccessMessage" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="0.5" To="1" Duration="0:0:0.8"
                           BeginTime="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SuccessMessage" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.5" To="1" Duration="0:0:0.8"
                           BeginTime="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>-->
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource SlideInAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource BackgroundAnimation}"/>

        </EventTrigger>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever">
                    <!-- 透明度动画 -->
                    <DoubleAnimation Storyboard.TargetName="FxCanvas"
                            Storyboard.TargetProperty="Opacity"
                            From="0.1" To="0.3"
                            Duration="0:0:3" 
                                     RepeatBehavior="Forever"
                            AutoReverse="True" />

                    <!-- 旋转动画 -->
                    <DoubleAnimation Storyboard.TargetName="RotateFx"
                            Storyboard.TargetProperty="Angle"
                            From="0" To="360"
                            Duration="0:1:00" />

                    <!-- X轴缩放 -->
                    <DoubleAnimation Storyboard.TargetName="ScaleFx"
                            Storyboard.TargetProperty="ScaleX"
                            From="1.0" To="1.08"
                            Duration="0:0:4" 
                            AutoReverse="True" />

                    <!-- Y轴缩放 -->
                    <DoubleAnimation Storyboard.TargetName="ScaleFx"
                            Storyboard.TargetProperty="ScaleY"
                            From="1.0" To="1.08"
                            Duration="0:0:4" 
                            AutoReverse="True" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="maingrid">
        <!-- 背景 -->
        <Rectangle Fill="#FF0F0F23" RadiusX="15"  RadiusY="15"/>

        <!-- 背景几何图形 -->
        <Canvas >
            <Polygon x:Name="GeometricShape1" Points="100,50 150,100 100,150 50,100" 
                    Fill="#FF1F1F3A" Opacity="0.3" Canvas.Left="600" Canvas.Top="100">
                <Polygon.RenderTransform>
                    <RotateTransform CenterX="50" CenterY="50"/>
                </Polygon.RenderTransform>
            </Polygon>
            <Ellipse x:Name="GeometricShape2" Width="80" Height="80" 
                    Fill="#FF2D2D4A" Opacity="0.2" Canvas.Left="650" Canvas.Top="400">
                <Ellipse.RenderTransform>
                    <RotateTransform CenterX="40" CenterY="40"/>
                </Ellipse.RenderTransform>
            </Ellipse>
        </Canvas>

        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧登录面板 -->
            <StackPanel x:Name="LoginPanel" Grid.Column="0" VerticalAlignment="Center" 
                       HorizontalAlignment="Center" Width="300" Margin="50">
                <StackPanel.RenderTransform>
                    <TranslateTransform X="-300"/>
                </StackPanel.RenderTransform>

                <!-- Logo区域 -->
                <Border Background="Transparent" Width="60" Height="60" CornerRadius="15" 
                       HorizontalAlignment="Left" Margin="0,0,0,30">
                    <!--<TextBlock Text="🏠" FontSize="30" HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>-->
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!-- 标题 -->
                    <!--<TextBlock Text="ICMore System" FontSize="18" FontWeight="Bold" 
                          Foreground="White" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>-->

                    <Image Grid.Column="0" Width="75" Source="/Images/logo_p.png" HorizontalAlignment="Center" Grid.ColumnSpan="2" />

                </Grid>
                
                <Border x:Name="LoginFormContainer" ClipToBounds="True">
                    <StackPanel>
                        <!-- 用户名输入 -->
                        <TextBlock Text="{Binding UserName}" Foreground="#FFAAAAAA" FontSize="12" 
                                  Margin="0,0,0,5"/>
                        <TextBox x:Name="UserNameTextBox" Style="{StaticResource ModernTextBox}" 
                                Height="40" Margin="0,0,0,25"/>

                        <!-- 密码输入 -->
                        <TextBlock Text="{Binding Password}" Foreground="#FFAAAAAA" FontSize="12" 
                                  Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource ModernPasswordBox}" 
                                   Height="40" Margin="0,0,0,15"/>

                        <!-- 忘记密码 -->
                        <TextBlock Text="{Binding ForgetPassword}" Foreground="#FF6366F1" FontSize="10" 
                                  HorizontalAlignment="Left" Margin="0,0,0,30" Cursor="Hand"/>

                        <!-- 登录按钮 -->
                        <Button x:Name="SignInButton" Content="{Binding SignIn}" Style="{StaticResource ModernButton}" 
                               Height="45" Margin="0,0,0,30" Click="SignInButton_Click"/>

                        <!-- 加载动画（隐藏） -->
                        <StackPanel x:Name="LoadingPanel" Orientation="Horizontal" 
                                   HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,10,0,20">
                            <Ellipse x:Name="LoadingEllipse1" Width="8" Height="8" Fill="#FF6366F1" 
                                   Margin="0,0,5,0" Opacity="0.2"/>
                            <Ellipse x:Name="LoadingEllipse2" Width="8" Height="8" Fill="#FF6366F1" 
                                   Margin="0,0,5,0" Opacity="0.2"/>
                            <Ellipse x:Name="LoadingEllipse3" Width="8" Height="8" Fill="#FF6366F1" 
                                   Opacity="0.2"/>
                        </StackPanel>

                        <!-- 注册链接 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding NOAccount}" Foreground="#FFAAAAAA" FontSize="12"/>
                            <TextBlock Text="{Binding SignUp}" Foreground="#FF6366F1" FontSize="12" Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 成功消息 - 初始隐藏 -->
                <StackPanel x:Name="SuccessMessage" HorizontalAlignment="Center" 
                           Opacity="0" Margin="0,50,0,0" Background="Transparent">
                    <StackPanel.RenderTransform>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5" CenterX="150" CenterY="50"/>
                    </StackPanel.RenderTransform>

                    <Border Background="#FF22C55E" CornerRadius="50" Width="100" Height="100" 
                           HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="✓" FontSize="50" Foreground="White" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Welcome Back!" FontSize="24" FontWeight="Bold"
                              Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Login successful" FontSize="14" 
                              Foreground="#FFAAAAAA" HorizontalAlignment="Center"/>
                </StackPanel>

                
            </StackPanel>
            <TextBlock Text="{Binding CompanyInfo}"
Foreground="#55FFFFFF" FontSize="12" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- 以下右侧内容区域哦 -->
            <Grid x:Name="RightPanel" Grid.Column="1" >
                <Grid.RenderTransform>
                    <TranslateTransform X="0"/>
                </Grid.RenderTransform>
                
                <ComboBox x:Name="LanguageSelector"
                          Panel.ZIndex="5"
                  ItemsSource="{Binding Languages}"
                  SelectedItem="{Binding CurrentLanguage, Mode=TwoWay}"
                  DisplayMemberPath="Display"
                  SelectedValuePath="Code"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Margin="0,20,20,0"
                  Width="100"
                  Padding="6,3"
                  FontSize="13"
                  Foreground="White"
                  Background="#1B1E2D"
                  BorderBrush="#30354C"
                  BorderThickness="1"
                  Cursor="Hand"
                  Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}">
                    <ComboBox.Resources>
                        <!-- 鼠标悬停高亮 -->
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#252B3C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>


                <!-- 背景渐变 -->
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                            <GradientStop Color="#FF1a1a2e" Offset="0"/>
                            <GradientStop Color="#FF0F0F23" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- 装饰性网格 -->
                <!--<Canvas Opacity="0.1">
                    
                    <Path Data="M0,0 L400,0 M0,50 L400,50 M0,100 L400,100 M0,150 L400,150 M0,200 L400,200 M0,250 L400,250 M0,300 L400,300 M0,350 L400,350 M0,400 L400,400 M0,450 L400,450 M0,500 L400,500" 
                          Stroke="#FF6366F1" StrokeThickness="0.5"/>
                    <Path Data="M0,0 L0,500 M50,0 L50,500 M100,0 L100,500 M150,0 L150,500 M200,0 L200,500 M250,0 L250,500 M300,0 L300,500 M350,0 L350,500 M400,0 L400,500" 
                          Stroke="#FF6366F1" StrokeThickness="0.5"/>
                </Canvas>-->

                <Canvas x:Name="FxCanvas" Width="400" Height="500"  Opacity="0.2">
                    <!-- 网格横线 -->
                    <Path Data="M0,0 L400,0 M0,50 L400,50 M0,100 L400,100 M0,150 L400,150 M0,200 L400,200 M0,250 L400,250 M0,300 L400,300 M0,350 L400,350 M0,400 L400,400 M0,450 L400,450 M0,500 L400,500" StrokeThickness="1">
                        <Path.Stroke>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#5066F1" Offset="0"/>
                                <GradientStop Color="#8066F1" Offset="1"/>
                            </LinearGradientBrush>
                        </Path.Stroke>
                    </Path>

                    <!-- 网格竖线 -->
                    <Path Data="M0,0 L0,500 M50,0 L50,500 M100,0 L100,500 M150,0 L150,500 M200,0 L200,500 M250,0 L250,500 M300,0 L300,500 M350,0 L350,500 M400,0 L400,500" StrokeThickness="1">
                        <Path.Stroke>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#5066F1" Offset="0"/>
                                <GradientStop Color="#8066F1" Offset="1"/>
                            </LinearGradientBrush>
                        </Path.Stroke>
                    </Path>

                    <!-- 中心光晕 -->
                    <!--<Ellipse Width="300" Height="300" 
              Canvas.Left="50" Canvas.Top="100"
              IsHitTestVisible="False">
         <Ellipse.Fill>
             <RadialGradientBrush>
                 <GradientStop Color="#4066F1" Offset="0"/>
                 <GradientStop Color="#0066F1" Offset="0.5"/>
                 <GradientStop Color="#00000000" Offset="1"/>
             </RadialGradientBrush>
         </Ellipse.Fill>
         <Ellipse.Effect>
             <BlurEffect Radius="50"/>
         </Ellipse.Effect>
     </Ellipse>-->

                    <!-- Transform -->
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <RotateTransform x:Name="RotateFx" CenterX="200" CenterY="250"/>
                            <ScaleTransform x:Name="ScaleFx" CenterX="200" CenterY="250"/>
                        </TransformGroup>
                    </Canvas.RenderTransform>
                </Canvas>


                <!-- 右侧文字内容 -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Title}" 
                              FontSize="24" FontWeight="Medium" Foreground="White" 
                              TextAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="ICMore System." 
                              FontSize="16" Foreground="#FFAAAAAA" 
                              TextAlignment="Center" Margin="0,0,0,30"/>
                    <!--<TextBlock Text="{Binding MoreAbout}" FontSize="12" Foreground="#FF6366F1" 
                              TextAlignment="Center" Cursor="Hand"/>-->
                </StackPanel>
                
                <!--<TextBlock Text="© 2025 Qianyuan Liheng Technology Co., Ltd."
                           Foreground="#55FFFFFF" FontSize="12" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"/>-->
            </Grid>
        </Grid>
    </Grid>
</Window>